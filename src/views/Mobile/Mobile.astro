---
import { getLangFromUrl } from "src/i18n/utils";
import getTranslatedContent from "@utils/directus";
import "./Mobile.scss";

const lang = getLangFromUrl(Astro.url);
const content = await getTranslatedContent("Mobile_Section", lang);
---

<section class="mobile__section">
  <div class="mobile__image">
    <img
      class="mobile__stan"
      src={`/assets/mobile/mobile_light.svg`}
      alt={content.imageAlt}
    />
    <img
      class="mobile__background"
      src={`/assets/mobile/mobile_background_light.svg`}
      alt=""
    />
  </div>
  <div class="mobile__text">
    <h2>{content.header}</h2>
    <p>{content.text}</p>
    <img class="mobile__dots" src="/assets/mobile/mobile_dots.svg" alt="" />
  </div>
</section>
