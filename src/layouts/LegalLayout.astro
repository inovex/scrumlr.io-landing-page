<ViewTransitions />

<style lang="scss">
  .legal {
    display: flex;
    flex-direction: row;
    padding: 128px 64px;
    position: relative;
  }

  aside {
    display: flex;
    flex-direction: column;
    padding-right: 64px;
    gap: 64px;
    color: #333948;
    flex-shrink: 0;
    position: sticky;
    top: 192px;
    align-self: start;

    nav {
      display: flex;
      flex-direction: column;
      gap: 32px;

      a {
        text-decoration: none;
        font-size: 24px;
        line-height: 28px;
        font-weight: 500;
        transition: all 0.1s ease-in-out;

        &:hover {
          color: var(--lightmode-pink);
        }
      }

      p {
        font-size: 20px;
        line-height: 28px;
        font-weight: 400;
      }
    }

    address {
      font-style: normal;
    }
  }
</style>
